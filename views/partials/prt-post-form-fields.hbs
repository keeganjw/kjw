<div>
	<label for="title">Title:</label>
	<input type="text" name="title" id="title" value="{{post.title}}">
</div>

<div>
	<label for="slug">Slug:</label>
	<input type="text" name="slug" id="slug" value="{{post.slug}}">
</div>

<div>
	<label for="description">Description:</label>
	<input type="text" name="description" id="description" value="{{post.description}}">
</div>

<div>
	<label for="thumbnail">Thumbnail:</label>
	<input type="text" name="thumbnail" id="thumbnail" value="{{post.thumbnail}}">
</div>

<div>
	<a href="/admin/blog-images" target="_blank" rel="noopener noreferrer">Upload and Select Images</a>
</div>

<div>
	<label for="article">Article:</label>
	<textarea name="article" id="article" cols="30" rows="10">{{{post.article}}}</textarea>
</div>