<script type="text/javascript">
	let i = 1;
	let subtimer = 1;
	let degree = 95;
	let background;
	const text = [
		'web developer. 👨‍💻',
		'database engineer. ⚙️',
		'sysadmin. 🖥️',
		'runner. 🏃‍♂️',
		'guitar player. 🎸'
	];

	window.setInterval(function () {
		// Rotate profile image border gradient by 7 degrees every 100ms
		background = `background: linear-gradient(${degree}deg, #75d4fe, #8edafe, #a4e0fe, #b8e6ff, #cbedff, #ddf3ff, #eef9ff, #ffffff);`
		document.getElementById('profile-image-wrapper').style = background;
		degree = (degree + 7) % 360;

		if(subtimer === 25) {
			document.getElementById('update-text').style.opacity = 0;
			subtimer++;
		}
		else if (subtimer === 30) {
			// Update about text every 3000ms, fade it in
			document.getElementById('update-text').innerText = `I am a ${text[i]}`;
			document.getElementById('update-text').style.opacity = 1;
			i = (i + 1) % text.length;
			subtimer = 1;
		} else {
			subtimer++;
		}
	}, 100);
</script>