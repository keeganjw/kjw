<script type="text/javascript">
	let i = 1;
	let subtimer = 1;
	let degree = 95;
	let background;
	const text = [
		'web developer. 👨‍💻',
		'database engineer. ⚙️',
		'sysadmin. 🖥️',
		'runner. 🏃‍♂️',
		'guitar player. 🎸'
	];

	window.setInterval(function () {
		// Rotate profile image border gradient by 7 degrees every 100ms
		background = `background: linear-gradient(${degree}deg, #192399, #223aa7, #2f4fb4, #3f64c0, #5178cb, #658dd4, #7ba1dd, #93b5e5);`;
		document.getElementById('profile-image-wrapper').style = background;
		degree = (degree + 7) % 360;

		// Update about text every 2500ms
		if (subtimer === 25) {
			document.getElementById('update-text').innerHTML = text[i];
			i = (i + 1) % text.length;
			subtimer = 1;
		} else {
			subtimer++;
		}
	}, 100);
</script>