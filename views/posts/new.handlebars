<h1>New Post</h1>

<form action="/" method="post">
	<div>
		<label for="title">Title</label>
		<input type="text" name="title" id="title">
	</div>

	<div>
		<label for="content">Body</label>
		<textarea name="content" id="" cols="30" rows="10"></textarea>
	</div>

	<div>
		<input type="submit" value="Post">
	</div>
</form>